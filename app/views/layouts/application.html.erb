<html lang="en"> <!--<![endif]-->
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

	<meta property="og:title" content="<%= content_for?(:title) ? yield(:title) + " | Poliana" : "Poliana | See Through Government" %>"/>
	<meta property="og:type" content="website"/>
	<meta property="og:url" content="<%= request.original_url %>"/>
	<meta property="og:image" content="https://www.poliana.com/assets/logo-square-large.png"/>
	<meta property="og:site_name" content="Poliana"/>
	<meta property="og:locale" content="EN_US"/>
	<meta property="og:description" content="Poliana is a web application that simpliﬁes the legislative system by analyzing and visualizing money’s inﬂuence in politics."/>

	<title><%= content_for?(:title) ? yield(:title) + " | Poliana" : "Poliana | See Through Government" %></title>
	
	<link href="https://fonts.googleapis.com/css?family=Open+Sans:300,700" rel="stylesheet" type="text/css">

	<%= stylesheet_link_tag "application" %>
	<%= javascript_include_tag "vendor/custom.modernizr" %>
	<%= csrf_meta_tags %>

	<!--[if lt IE 9]>
		<script src="https://solarcdn.googlecode.com/files/html5shiv.min.js"></script>
	<![endif]-->
	
	<script>
		(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
		(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
		m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
		})(window,document,'script','//www.google-analytics.com/analytics.js','ga');

		ga('create', 'UA-42980806-1', 'poliana.com');
		ga('send', 'pageview');
	</script>
</head>
<body>
	<div id="container">
		<header id="header">
			<div class="row">
				<nav id="topNav" class="top-bar large-12 columns">
					<ul class="title-area">
						<li class="toggle-topbar menu-icon"><a href="#"><span></span></a></li>
						<li class="name">
							<%= link_to image_tag('logo-primary.png'), root_path, :id => 'logo' %>
						</li>
					</ul>
					<section class="top-bar-section">
						<ul class="right">
							<li class="show-for-breakpoint"><label>Explore</label></li>
					  		<li class="has-dropdown hide-for-breakpoint">
								<a href="#">Explore</a>
								<ul class="dropdown">
						  			<li><%= link_to "Bills", bills_path %></li>
									<li><a href="#">Industries</a></li>
									<li><a href="#">Politicians</a></li>
								</ul>
					  		</li>
							<li class="show-for-breakpoint"><%= link_to "Bills", bills_path %></li>
							<li class="show-for-breakpoint"><a href="#">Industries</a></li>
							<li class="show-for-breakpoint"><a href="#">Politicians</a></li>
							<li class="hide-for-breakpoint"><%= link_to "About", about_path %></li>
							<li><%= link_to "<b>Sign In</b>".html_safe(), new_user_session_path %></a></li>
					  		<li class="has-form">
								<form>
						  			<div class="row collapse">
										<div id="search" class="small-12 columns">
							  				<input type="text" value="<%= params[:query] %>" class="menuSearch<%= !request.env['PATH_INFO'].include?('search') ? " notSearch" : '' %>" placeholder="Search">
											<a href="#" class="menuSearchClick"><span aria-hidden="true" class="icon-search"></span></a>
										</div>
						  			</div>
								</form>
					  		</li>
						</ul>
				  	</section>
				</nav>
			</div>
		</header>
		<section id="main">
			<%= yield %>
		</section>
		<div id="containerFooter"></div>
	</div>
	<footer id="footer">
		<div class="row">
			<nav id="bottomNav" class="large-9 columns">
				<ul>
					<li><%= link_to "Home", root_path %></li>
				</ul>
				<ul>
					<li><%= link_to "About", about_path %></li>
					<li><%= link_to "Mission", mission_path %></li>
					<li><%= link_to "Team", team_path %></li>
				</ul>
				<ul>
					<li><%= link_to "Explore", "#" %></li>
					<li><%= link_to "Bills", "#" %></li>
					<li><%= link_to "Industries", "#" %></li>
					<li><%= link_to "Politicians", "#" %></li>
				</ul>
				<ul>
					<li><%= link_to "Contact Us", contact_path %></li>
					<li><%= link_to "FAQ", faq_path %></li>
				</ul>
				<ul>
					<li>Find Us On</li>
					<li><%= link_to "Facebook", "https://www.facebook.com/polianainc", :target => "_blank" %></li>
					<li><%= link_to "Twitter", "https://www.twitter.com/poliana", :target => "_blank" %></li>
					<li><%= link_to "Google Plus", "#", :target => "_blank" %></li>
				</ul>
			</nav>
			<div id="copyright" class="large-3 columns">
				<p>Made with <span aria-hidden="true" class="icon-heart"></span> in Nashville.</p>
				<p>
					<%= link_to "Privacy Policy", policy_path %>
					<span>&nbsp;|&nbsp;</span>
					<%= link_to "Terms of Service", terms_path %>
					<br>
					Copyright &copy; <%= Time.now.year %> Poliana
					<br>
					All Rights Reserved.
				</p>
			</div>
		</div>
	</footer>
	
	<div id="sharable" class="reveal-modal">
		<h2 class="aligncenter">Share this Visualization</h2>
		<p class="aligncenter">Find something interesting? Send it out to your social networks and spread your findings...</p>
		<div class="row">
			<div class="large-6 large-centered columns">
				<div class="row">
					<div class="large-6 columns">
						<a href="#" onclick="window.open('https://www.facebook.com/sharer/sharer.php?u='+encodeURIComponent(location.href), 'facebook-share-dialog', 'width=626,height=436'); return false;" class="button expand radius facebook"><span aria-hidden="true" class="icon-facebook"></span><span>Share</span></a>
					</div>
					<div class="large-6 columns">
						<a href="#" onclick="window.open('https://twitter.com/share?url='+encodeURIComponent(location.href), 'twitter-share-dialog', 'width=626,height=256'); return false;" class="button expand radius twitter"><span aria-hidden="true" class="icon-twitter"></span><span>Share</span></a>
					</div>
				</div>
			</div>
		</div>
		<a class="close-reveal-modal">&#215;</a>
	</div>
	
	<div id="otherModal" class="reveal-modal small"></div>

	<%= javascript_include_tag "application.min" %>
	
	<% if content_for?(:entity_type) %>
		<%= javascript_include_tag "d3.min" %>
		<%= javascript_include_tag "topojson.min" %>
		<%= javascript_include_tag "stupidtable.min" %>
		<%= javascript_include_tag yield(:entity_type) + ".min" %>
	<% end %>
</body>
</html>